<p id="notice"><%= notice %></p>
[
<% @states.each do |s| %>
<%= link_to s.abbreviation, admin_state_path( s.id) %>
<% end %>
]
<h3><%= @state.name %></h3>


<p>
<h4>United States Senators</h4>

<table class="recordTable" width=600>
  <tr>
    <th>Office</th><th>Incumbent</th>
  </tr>

<% @us_senator_offices.each do |office| %>
  <tr>
    <td><%= office.office_type.name %></td>
    <td>
    <% office.incumbents.each do  |incumbent| %>	              
       <%= link_to incumbent.official_name, admin_official_path(incumbent.official_id, :state_id => @state.id ) %>
    <% end %>           
   </td>
  </tr>
<% end %>
</table>
</p>

<p>
<h4>United States Representatives</h4>

<table class="recordsTable" width=600>
  <tr>
    <th>Office</th><th>Incumbent</th>
  </tr>
<% @us_rep_offices.each do |office| %>
  <tr>
	<% if office.congressional_district_no > 0 %>
	  <td><%= office.office_type.name + ", District " + office.congressional_district_no.to_s %></td>
	<% else %> 
	  <td><%= office.office_type.name + " at Large" %></td>
	<% end %>
    <td>
    <% office.incumbents.each do |incumbent| %>
       <%= link_to incumbent.official_name, admin_official_path(incumbent.official_id, :state_id => @state.id) %>
    <% end %>
   </td>
  </tr>
<% end %>
</table>
</p>
<p>
<h4>State Senators</h4>

<table class="recordsTable" width=600>
  <tr>
    <th>Office</th><th>Incumbent</th>
  </tr>
<% @state_senator_offices.each do |office| %>
  <tr>
    <td>
    <%= office.office_type.name + ", District " + office.state_senate_district_key %>
    </td>
    <td>
      <% office.incumbents.each do |incumbent| %>
        <%= link_to incumbent.official_name, admin_official_path(incumbent.official_id, :state_id => @state.id) %>
      <% end %>
   </td>
  </tr>
<% end %>
</table>
</p>
<p>

<h4>State Representatives</h4>

<table class="recordsTable" width=600>
  <tr>
    <th>Office</th><th>Incumbent</th>
  </tr>
<% @state_rep_offices.each do |office| %>
  <tr>
	<td><%= office.office_type.name + ", District " + office.state_house_district_key %></td>
    <td>
	  <% office.incumbents.each do |incumbent| %>
	    <%= link_to incumbent.official_name, admin_official_path(incumbent.official_id, :state_id => @state.id) %>
	  <% end %>
   </td>
  </tr>
<% end %>
</table>
</p>





<p>
<ul>
<li><%= link_to "Municipalities", municipalities_path( :state_id => @state.id ) %></li>
<li><%= link_to "Counties", admin_counties_path( :state_id => @state.id ) %></li>
</ul>
</p>







