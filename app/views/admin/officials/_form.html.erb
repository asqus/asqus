<%= simple_form_for([:admin,@official], :html=> { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :state_id, :as => :hidden, :input_html => { :value => params[:state_id] }%>
  </div>

  <div class="field">
	<%= f.label :photo %><br />
	<%= f.file_field :photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
