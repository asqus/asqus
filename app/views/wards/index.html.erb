<h3>Wards</h3>

<table>
  <tr>
    <th>Municipality</th>
    <th>Ward number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wards.each do |ward| %>
  <tr>
    <td><%= ward.municipality %></td>
    <td><%= ward.ward_number %></td>
    <td><%= link_to 'Show', ward %></td>
    <td><%= link_to 'Edit', edit_ward_path(ward) %></td>
    <td><%= link_to 'Destroy', ward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

