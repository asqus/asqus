<a href="<%= url_for(root_path) %>" class='brand'><%= image_tag('asqus-16px-height.png') %>&nbsp;Asq.us</a>
<ul class="nav">
  <% if user_signed_in? %>
    <li>
    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>        
    </li>
    <li>
    <%= link_to current_user.email, edit_user_registration_path %>
    </li>
    <% if current_user.site_role_id == 'ADMIN' %>
      <li>
      <%= link_to 'Admin', '/admin' %>
      </li>
    <% end %>
    <% if current_user.staff_official_id %>
      <li>
      <%= link_to 'Staff', '/staff' %>
      </li>
    <% end %>
  <% else %>
    <li>
    <%= link_to 'Sign up', new_user_registration_path %>
    </li>
    <li>
    <%= link_to 'Login', new_user_session_path %>  
    </li>
  <% end %>
  <% if mobile_site? %>
    <li>
    <%= link_to "Full Site",  request.parameters.merge({:mobile => 0}) %>
    </li>
  <% else %>
    <li>
    <%= link_to "Mobile Site", request.parameters.merge({:mobile => 1}) %>
    </li>
  <%end %>

</ul>
