<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a href="<%= url_for(root_path) %>" class='brand'><%= image_tag('asqus-logo.png') %></a>

      <div class="nav-collapse">
        <ul class="nav">
  <% if user_signed_in? %>
    <li>
    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>        
    </li>
    <li>
    <%= link_to current_user.email, edit_user_registration_path %>
    </li>
    <% if current_user.site_role_id == 'ADMIN' %>
      <li>
      <%= link_to 'Admin', '/admin' %>
      </li>
    <% end %>
    <% if current_user.staff_official_id %>
      <li>
      <%= link_to 'Staff', '/staff' %>
      </li>
    <% end %>
  <% else %>
    <li>
    <%= link_to 'Sign up', new_user_registration_path %>
    </li>
    <li>
    <%= link_to 'Login', new_user_session_path %>  
    </li>
  <% end %>
  <% if mobile_site? %>
    <li>
    <%= link_to "Full Site",  request.parameters.merge({:mobile => 0}) %>
    </li>
  <% else %>
    <li>
    <%= link_to "Mobile Site", request.parameters.merge({:mobile => 1}) %>
    </li>
  <%end %>

        </ul>
      </div> <!-- nav-collapse -->
    </div> <!-- container -->
  </div><!-- navbar-inner -->
</div><!-- navbar -->
