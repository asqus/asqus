<%= simple_form_for(@quick_poll) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :poller_id %>
    <%= f.input :poller_type %>
    <%= f.input :poll_workflow_state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
