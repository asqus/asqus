<h3>Issues for <%= @poller.full_name %></h3>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.title %></td>
    <td><%= link_to 'Show', [:staff,issue] %></td>
    <td><%= link_to 'Edit', edit_staff_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', [:staff,issue], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_staff_issue_path(:poller_type => params[:poller_type], :poller_id => params[:poller_id]) %>
