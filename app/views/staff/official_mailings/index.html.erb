<h3>Official Poll Mailings</h3>

<table width=400>
  <tr>
    <th>Mailing ID</th>
    <th>Created At</th>
    <th>Status</th>

  </tr>

<% @mailings.each do |mailing| %>
  <tr>
    <td><%= mailing.id %></td>
    <td><%= mailing.created_at %></td>
    <td><%= mailing.mailing_status.name %></td>
  </tr>
<% end %>
</table>

