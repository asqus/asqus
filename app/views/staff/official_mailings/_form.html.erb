<%= simple_form_for([:staff,@mailing]) do |f| %>
    <%= f.error_notification %>

	
    A mailing will be generated notifying constituents of the following open polls:

    <ul>
	
    <% @polls.each do |poll| %>
    <li><%= poll.title %></li>
    <% end %>
  
    </ul>
    <p>

    <div class="form-inputs">
    <%= f.input :rep_message, :label => "Optional Constituent Message:" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

<% end %>
