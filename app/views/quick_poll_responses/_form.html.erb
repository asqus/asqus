<div class="container">
<%= simple_form_for(@quick_poll_response) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :quick_poll_id, :value => @quick_poll.id %>

  <h4>Asq.us Poll: <%= @quick_poll.title %></h4> 

  <%= image_tag 'asqus-16px-height.png' %> <%= @quick_poll.body %>

  <p>

  <div class="form-actions">
  <div class="btn-group btn-group-vertical">
    <% @quick_poll.quick_poll_options.each do |option| %>
      <input type=submit class="btn btn-info" value='<%= option.text %>' name = <%= option.value %> style="width: <%= @quick_poll_options_width_px %>px;">
    <% end %>
 </div>
 </div>

<% end %>
</div>

