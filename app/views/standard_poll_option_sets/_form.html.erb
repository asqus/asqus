<%= simple_form_for(@standard_poll_option_set) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.fields_for :standard_poll_options do |builder| %>
      <%= builder.input :text, :label=>'Option' + i.ts %>
      <% i = i + 1 %>
    <% end %>
 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
